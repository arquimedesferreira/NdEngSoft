
@{
    ViewBag.Title = "Pessoa";
}

<h2>Pessoa : Nome </h2>
<div class="container">

    <form class="form" onsubmit="pessoaController.adicionar(event)">

        <div class="form-group">
            <label for="nome">Nome</label>
            <input id="nome" type="text" class="form-control" min="1" step="0" required autofocus />
        </div>
    </form>
    <!-- Formulário de cadastro de -->
    <form class="form" onsubmit="pessoaControle.adicionarContato(event)">
        <label for="valor">Tipo de Contato:</label>
        <select class="form-control" id="exampleFormControlSelect1" required>
            <option>Selecionar</option>
            <option>CELULAR</option>
            <option>TELEFONE_RESIDENCIAL</option>
            <option>TELEFONE_COMERCIAL</option>
            <option>EMAIL</option>
            <option>IM</option>
            <option>SITE</option>
        </select>
        <div class="form-group">
            <label for="valor">Valor do Contato:</label>
            <input type="text" min="1" step="1" id="valor" class="form-control" value="..." required />
        </div>
        <div class="form-group">
            <label for="valor">Marcador Contato:</label>
            <select class="form-control" id="exampleFormControlSelect1" required>
                <option>Selecionar</option>
                <option>FAMILIA</option>
                <option>TRABALHO</option>
                <option>ESCOLA</option>
            </select>
        </div>

        <button class="btn btn-primary" type="submit" id="btnIncluirContato">Incluir</button>
    </form>

