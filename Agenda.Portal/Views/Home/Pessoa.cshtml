    <!-- Formulário de cadastro de endereço-->
    <form class="form" onsubmit="pessoaControle.adicionarEndereco(event)">

        <div class="form-group">
            <label for="logradouro">Logradouro:</label>
            <input type="text" min="1" step="1" id="logradouro" class="form-control" value="Logradouro" required />
        </div>
        <div class="form-group">
            <label for="numero">Numero:</label>
            <input type="text" min="1" step="1" id="numero" class="form-control" value="numero" />
        </div>
        <div class="form-group">
            <label for="bairro">Bairro:</label>
            <input type="text" min="1" step="1" id="bairro" class="form-control" value="Bairro" />
        </div>
        <div class="form-group">
            <label for="complemento">Complemento:</label>
            <input type="text" min="1" step="1" id="complemento" class="form-control" value="Complemento" />
        </div>
        <div class="form-group">
            <label for="cidade">Cidade:</label>
            <input type="text" min="1" step="1" id="cidade" class="form-control" value="Cidade" />
        </div>
        <div class="form-group">
            <label for="estado">Estado:</label>
            <input type="text" min="1" step="1" id="estado" class="form-control" value="Estado" />
        </div>
        <button class="btn btn-primary" type="submit" id="btnIncluirEndereco">Incluir</button>
    </form>


