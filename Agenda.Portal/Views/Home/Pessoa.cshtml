
@{
    ViewBag.Title = "Pessoa";
}

<h2>Pessoa : Nome </h2>
<div class="container">

    <form class="form" onsubmit="negociacaoControle.adiciona(event)">

        <div class="form-group">
            <label for="nome">Nome</label>
            <input id="nome" type="text" class="form-control" min="1" step="0" required autofocus />
        </div>


        <div class="form-group">
            <label for="tipoContato">Tipo de Contato</label>
            <input type="text" id="tipoContato" class="form-control" required />
        </div>

        <div class="form-group">
            <label for="valor">Valor do Contato:</label>
            <input type="text" min="1" step="1" id="valor" class="form-control" value="1" required />
        </div>

        <div class="form-group">
            <label for="marcador">Marcador</label>
            <input id="marcador" type="text" class="form-control" min="0.01" step="0.01" value="0.0" required />
        </div>


        <h2 class="text-center">Lista de Contatos Cadastrados</h2>
        <table class="table table-hover table-bordered">
            <thead>
                <tr>
                    <th>DATA</th>
                    <th>QUANTIDADE</th>
                    <th>VALOR</th>
                    <th>
                        <button type="button" class="btn btn-danger"> <span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
                        ------
                        <button type="button" class="btn btn-success"> <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></button>
                    </th>
                </tr>
            </thead>

            <tbody></tbody>

            <tfoot>
            </tfoot>
        </table>

        <div class="form-group">
            <label for="tipoContato">Tipo de Contato</label>
            <input type="text" id="tipoContato" class="form-control" required />
        </div>

        <div class="form-group">
            <label for="valor">Valor do Contato:</label>
            <input type="text" min="1" step="1" id="valor" class="form-control" value="1" required />
        </div>

        <div class="form-group">
            <label for="marcador">Marcador</label>
            <input id="marcador" type="text" class="form-control" min="0.01" step="0.01" value="0.0" required />
        </div>

        <h2 class="text-center">Lista de Endereços Cadastrados</h2>
        <table class="table table-hover table-bordered">
            <thead>
                <tr>
                    <th>DATA</th>
                    <th>QUANTIDADE</th>
                    <th>VALOR</th>
                    <th>
                        <button type="button" class="btn btn-danger"> <span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
                        ------
                        <button type="button" class="btn btn-success"> <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></button>
                    </th>
                </tr>
            </thead>

            <tbody></tbody>

            <tfoot>
            </tfoot>
        </table>






        <button class="btn btn-primary" type="submit" id="btnIncluir">Incluir</button>
    </form>
</div>
